{
    "name": "brunocfalcao/helpers",
    "description": "Generic Laravel helpers for common web applications",
    "type": "library",
    "keywords": [
        "helpers",
        "brunocfalcao",
        "laravel",
        "framework",
        "php"
    ],
    "homepage": "https://github.com/brunocfalcao/helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Falcao",
            "email": "bruno.c.falcao@brunofalcao.me",
            "homepage": "https://www.brunofalcao.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0",
        "imliam/laravel-blade-helper": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Brunocfalcao\\Helpers\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Brunocfalcao\\Helpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Brunocfalcao\\Helpers\\HelpersServiceProvider"
            ]
        }
    }
}
